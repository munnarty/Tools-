    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const fileInput = document.getElementById('fileInput');
            const uploadBtn = document.getElementById('uploadBtn');
            const dropArea = document.getElementById('dropArea');
            const enhanceSlider = document.getElementById('enhanceSlider');
            const sliderTrack = document.getElementById('sliderTrack');
            const sliderThumb = document.getElementById('sliderThumb');
            const enhanceValue = document.getElementById('enhanceValue');
            const enhanceBtn = document.getElementById('enhanceBtn');
            const presetBtns = document.querySelectorAll('.preset-btn');
            const imagePlaceholder = document.getElementById('imagePlaceholder');
            const imagePreview = document.getElementById('imagePreview');
            const imageBefore = document.getElementById('imageBefore');
            const imageAfter = document.getElementById('imageAfter');
            const singlePreview = document.getElementById('singlePreview');
            const comparisonPreview = document.getElementById('comparisonPreview');
            const downloadBtn = document.getElementById('downloadBtn');
            const compareBtn = document.getElementById('compareBtn');
            const resetBtn = document.getElementById('resetBtn');
            const resultActions = document.getElementById('resultActions');
            const fileInfo = document.getElementById('fileInfo');
            const loadingIndicator = document.getElementById('loadingIndicator');
            
            // Variables
            let originalImage = null;
            let enhancedImage = null;
            let isComparing = false;
            let isDragging = false;
            
            // Event Listeners
            uploadBtn.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', handleFileSelect);
            dropArea.addEventListener('dragover', handleDragOver);
            dropArea.addEventListener('dragleave', handleDragLeave);
            dropArea.addEventListener('drop', handleDrop);
            enhanceSlider.addEventListener('input', updateSlider);
            enhanceBtn.addEventListener('click', enhanceImage);
            presetBtns.forEach(btn => btn.addEventListener('click', setPresetValue));
            downloadBtn.addEventListener('click', downloadImage);
            compareBtn.addEventListener('click', toggleComparison);
            resetBtn.addEventListener('click', resetTool);
            
            // Comparison slider functionality
            const sliderHandle = document.querySelector('.slider-handle');
            sliderHandle.addEventListener('mousedown', startDrag);
            document.addEventListener('mousemove', handleDrag);
            document.addEventListener('mouseup', endDrag);
            
            // Initialize slider
            updateSlider();
            
            // Functions
            function handleFileSelect(e) {
                const file = e.target.files ? e.target.files[0] : (e.dataTransfer ? e.dataTransfer.files[0] : null);
                if (!file) return;
                
                if (!file.type.match('image.*')) {
                    alert('Please select an image file (JPG, PNG, or WEBP).');
                    return;
                }
                
                if (file.size > 10 * 1024 * 1024) {
                    alert('File size exceeds 10MB limit. Please choose a smaller image.');
                    return;
                }
                
                processImageFile(file);
            }
            
            function handleDragOver(e) {
                e.preventDefault();
                e.stopPropagation();
                dropArea.classList.add('active');
            }
            
            function handleDragLeave(e) {
                e.preventDefault();
                e.stopPropagation();
                dropArea.classList.remove('active');
            }
            
            function handleDrop(e) {
                e.preventDefault();
                e.stopPropagation();
                dropArea.classList.remove('active');
                handleFileSelect(e);
            }
            
            function processImageFile(file) {
                const reader = new FileReader();
                
                reader.onload = function(event) {
                    originalImage = event.target.result;
                    
                    // Display original image
                    imagePreview.src = originalImage;
                    imagePreview.style.display = 'block';
                    imageBefore.src = originalImage;
                    imagePlaceholder.style.display = 'none';
                    
                    // Enable enhance button
                    enhanceBtn.disabled = false;
                    
                    // Update file info
                    fileInfo.innerHTML = `
                        <strong>${file.name}</strong><br>
                        Size: ${formatFileSize(file.size)}<br>
                        Type: ${file.type.split('/')[1].toUpperCase()}
                    `;
                };
                
                reader.readAsDataURL(file);
            }
            
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }
            
            function updateSlider() {
                const value = enhanceSlider.value;
                const percentage = value + '%';
                
                // Update track and thumb position
                sliderTrack.style.width = percentage;
                sliderThumb.style.left = percentage;
                
                // Update displayed value
                enhanceValue.textContent = percentage;
            }
            
            function setPresetValue(e) {
                const value = e.target.dataset.value;
                enhanceSlider.value = value;
                updateSlider();
                
                // Update active preset button
                presetBtns.forEach(btn => btn.classList.remove('active'));
                e.target.classList.add('active');
            }
            
            function enhanceImage() {
                if (!originalImage) return;
                
                // Show loading indicator
                loadingIndicator.style.display = 'block';
                imagePreview.style.display = 'none';
                comparisonPreview.style.display = 'none';
                resultActions.style.display = 'none';
                
                // Simulate enhancement processing (in a real app, this would be an API call)
                setTimeout(() => {
                    // For demo purposes, we'll just use the original image
                    // In a real implementation, you would send the image to a server
                    // for processing or use a client-side library
                    enhancedImage = originalImage; // Replace with actual enhanced image
                    
                    // Display results
                    loadingIndicator.style.display = 'none';
                    imagePreview.src = enhancedImage;
                    imageAfter.src = enhancedImage;
                    imagePreview.style.display = 'block';
                    resultActions.style.display = 'flex';
                    
                    // Reset comparison state
                    isComparing = false;
                    compareBtn.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="16 18 22 12 16 6"></polyline>
                            <polyline points="8 6 2 12 8 18"></polyline>
                        </svg>
                        Compare
                    `;
                }, 2000);
            }
            
            function toggleComparison() {
                isComparing = !isComparing;
                
                if (isComparing) {
                    imagePreview.style.display = 'none';
                    comparisonPreview.style.display = 'block';
                    compareBtn.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="9" y1="9" x2="15" y2="15"></line>
                            <line x1="15" y1="9" x2="9" y2="15"></line>
                        </svg>
                        Single View
                    `;
                } else {
                    imagePreview.style.display = 'block';
                    comparisonPreview.style.display = 'none';
                    compareBtn.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="16 18 22 12 16 6"></polyline>
                            <polyline points="8 6 2 12 8 18"></polyline>
                        </svg>
                        Compare
                    `;
                }
            }
            
            function startDrag(e) {
                if (!isComparing) return;
                isDragging = true;
                e.preventDefault();
            }
            
            function handleDrag(e) {
                if (!isDragging || !isComparing) return;
                
                const container = comparisonPreview.getBoundingClientRect();
                const x = e.clientX - container.left;
                const percentage = (x / container.width) * 100;
                
                // Limit between 0 and 100
                const boundedPercentage = Math.min(Math.max(0, percentage), 100);
                
                document.querySelector('.image-after').style.width = `${boundedPercentage}%`;
                sliderHandle.style.left = `${boundedPercentage}%`;
            }
            
            function endDrag() {
                isDragging = false;
            }
            
            function downloadImage() {
                if (!enhancedImage) return;
                
                const link = document.createElement('a');
                link.href = enhancedImage;
                link.download = 'enhanced-image.jpg';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }
            
            function resetTool() {
                // Reset all elements to initial state
                fileInput.value = '';
                originalImage = null;
                enhancedImage = null;
                isComparing = false;
                
                imagePreview.src = '';
                imagePreview.style.display = 'none';
                imageBefore.src = '';
                imageAfter.src = '';
                imagePlaceholder.style.display = 'flex';
                comparisonPreview.style.display = 'none';
                resultActions.style.display = 'none';
                loadingIndicator.style.display = 'none';
                
                enhanceBtn.disabled = true;
                fileInfo.textContent = 'No file selected';
                
                // Reset slider and presets
                enhanceSlider.value = 50;
                updateSlider();
                presetBtns.forEach(btn => btn.classList.remove('active'));
                document.querySelector('.preset-btn[data-value="50"]').classList.add('active');
                compareBtn.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="16 18 22 12 16 6"></polyline>
                        <polyline points="8 6 2 12 8 18"></polyline>
                    </svg>
                    Compare
                `;
            }
        });
    </script>
</body>
</html>
